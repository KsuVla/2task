include /ui_kit/header_footer/header.pug
include /ui_kit/header_footer/footer.pug
include /ui_kit/form_elements/rangeSlider/rangeSlider.pug

include /ui_kit/form_elements/inputText/inputText.pug
include /ui_kit/form_elements/radiobutton/radiobutton.pug
include /ui_kit/form_elements/checkbox/checkbox.pug
include /ui_kit/form_elements/btn/btn.pug

+header(0)

div.content.searchRoom__shadow
	div.content_container.searchRoom2
		div.searchRoom_filters
					
			div.searchRoom_filters_diapason
				+rangeSlider('диапазон цены',0,100000,'idPrice1')
				p Стоимость за сутки пребывания в номере

			div.searchRoom_filters_diapason
				+rangeSlider('диапазон цены',100,1000,'idPrice2')
				p Стоимость за сутки пребывания в номере
			
			div.searchRoom_filters_diapason
				+rangeSlider('диапазон цены',0,100000,'idPrice3')
				p Стоимость за сутки пребывания в номере

			div.searchRoom_filters_diapason
				+rangeSlider('диапазон цены',100,1000,'idPrice4')
				p Стоимость за сутки пребывания в номере
		
		div.sliderConf
			div.checkbox
				+checkbox_item('Настройки бегунков', 's1','')

			div.sliderConf_block
				div.sliderConf_block_item
					+btn('Применить','btn__gradient')
				div.sliderConf_block_item
					div.sliderConf_block_item_option
						+radio('s1','rbGroopSlider','Настройки бегунка №1','checked')
						+radio('s2','rbGroopSlider','Настройки бегунка №2')
						+radio('s3','rbGroopSlider','Настройки бегунка №3')
						+radio('s4','rbGroopSlider','Настройки бегунка №4')
					div.sliderConf_block_item_option
						+radio('srb1',"rbGroopType",'Диапазон значений','checked')
						+radio('srb2',"rbGroopType",'От 0 до выбранного')
						+radio('srb3',"rbGroopType",'Единичное значение')
					div.sliderConf_block_item_option
						+radio('orient1','rbGroopOrientation','Горизонтальная','checked')
						+radio('orient2','rbGroopOrientation','Вертикальная')
				
					div.sliderConf_block_item_option
						+inputText('min','','0','min')
						+inputText('max','','1000','max')
					div.sliderConf_block_item_option
						+inputText('min текущий','','50','minStart')
						+inputText('max текущий','','500','maxStart')
					div.sliderConf_block_item_option
						+inputText('Шаг','','2','step')
						

				div.sliderConf_block_item
					div.sliderConf_block_item_option
						h2 Шкала
						+radio('scale1','rbGroopScale','Вкл','checked')
						+radio('scale2','rbGroopScale','Выкл')
						+inputText('Кол-во делений','','10','scaleStep')
					
					div.sliderConf_block_item_option
						h2 Числовой диапазон
						+radio('value1','rbGroopValue','Вкл','checked')
						+radio('value2','rbGroopValue','Выкл')
					
				

				
				



			
			
			
			
			
			

+footer


